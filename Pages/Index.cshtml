@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}
<div class="card" style=" margin-top: 20px">
  <div class="card-header">
<h1>Students Marks </h1>
</div>
 <div class="card-body">
<form method="post" >  
    <div class="form-group">  

    <div class="row">  
            <label asp-for="Name" class="col-lg-2"></label>  
            <input type="text" asp-for="Name" class="col-lg-2" />  
              <label asp-for="PassMark" class="col-lg-2"></label>  
            <input type="number" asp-for="PassMark" class="col-lg-2" />  
                   
        </div>  

        <div class="row">  
            <label asp-for="Marks1" class="col-lg-2"></label>  
            <input type="number" step="0.01" asp-for="Marks1" class="col-lg-2" />  
            <label asp-for="Marks2" class="col-lg-2"></label>  
            <input type="number" step="0.01" asp-for="Marks2" class="col-lg-2" />  
            <label asp-for="Marks3" class="col-lg-2"></label>  
            <input type="number" step="0.01" asp-for="Marks3" class="col-lg-2" />  
            <label asp-for="Marks4" class="col-lg-2"></label>  
            <input type="number" step="0.01" asp-for="Marks4" class="col-lg-2" />  
        </div>  
    
       
         
        <div class="row">  
            <input type="submit" value="Submit" asp-action="Index" />  
        </div>  
    </div>  
</form>   
</div>
<div class="card-footer">

 <div class="row">  
            <label asp-for="StudentResults" class="col-lg-2"></label>  
            @foreach (var item in Model.StudentResults)
                    {
                        <p>@item</p>
                    }
             
        </div>  
         

</div>

 </div>